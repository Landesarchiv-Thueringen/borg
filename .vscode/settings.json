{
  // Formatting
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "typescript.preferences.importModuleSpecifier": "relative",

  "cSpell.words": [
    "Formatverifikation",
    "Formatversion",
    "gonic",
    "jhove",
    "odfvalidator",
    "officedocument",
    "OOXML",
    "opendocument",
    "openxmlformats",
    "PDFA",
    "PRONOM",
    "puid",
    "Tika",
    "verapdf"
  ]
}
